@model Kursova.ViewModels.LoginViewModel

    <link rel="stylesheet" href="~/css/styles.css" />

    <form class="text-center bg-light" method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <h2>Вхід</h2>

        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label><br />
            <input asp-for="RememberMe" />
        </div>
        <div>
            <input class="btn btn-danger" type="submit" value="Ввійти" />
        </div>
    </form>