@model IEnumerable<Kursova.ViewModels.TaskViewModel>

@{
    ViewData["Title"] = "ViewListQuestion";
}

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Створити нове запитання</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Питання
            </th>
            <th>
                Відповідь
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Question
                </td>
                <td>
                    @item.Answer
                </td>

                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a>

                        <a asp-action="Details" asp-route-id="@item.Id">Деталі</a>

                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    }


                </td>

            </tr>


        }



    </tbody>

</table>